{
  "name": "Content Manager",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Content Manager helps you organize and manage your browsing sessions by creating and switching between different contexts.",
  "icons": {
    "16": "assets/images/logo-16px.png",
    "48": "assets/images/logo-48px.png",
    "128": "assets/images/logo-128px.png"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_title": "Content Manager",
    "default_popup": "./index.html"
  }
}
